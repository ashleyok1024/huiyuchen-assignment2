@import '~styles/index.styl'

html, body, #root
  width 100%
  height 100%

.btn
  width 100%
  outline none
  padding 8px 16px
  background-color #fff
  border-radius 4px
  cursor pointer
  margin-right 12px
  border 1px solid rgba(0, 0, 0, 0)
  transition all .3s ease

  &.btn-toast
    margin 16px 0
    font-size 16px

  &:hover
    transform translateY(1px)
    box-shadow 0px 2px 5px 0 rgba(0, 0, 0, .15)

.btn.info
  background-color #00B4FF
  color #f4f4f4

.btn.warning
  background-color #FCCA46
  color #f4f4f4

.btn.error
  background-color #FF1D23
  color #f4f4f4

.btn.success
  background-color #59CC00
  color #f4f4f4

.flex-center
  $flex(center)

.flex-row
  display flex
  flex-direction row
  align-items center

.flex-col
  display flex
  flex-direction column
  justify-content center

.container
  > .title
    $flex(column)
    font-family 'Cochin', 'Helvetica Neue', Arial, sans-serif
    margin 45px 0

    > h1
      margin-bottom 12px

  > .content
    width 800px
    margin 0 auto
    margin-bottom 24px
    padding 24px
    border-radius 8px
    background-color #f6f6f6

    h4
      margin-bottom 16px

  > .code
    padding 0
    background-color #fff

.form-item
  $flex(column, flex-start, flex-start)
  margin-top 16px

  > span
    margin-bottom 8px

  &:last-child
    margin-bottom 16px

.radio
  margin-right 16px
  cursor pointer

  input
    cursor pointer

.divider
  margin 16px 0
  height 1px
  background-color $text

pre
  background-color #fff !important
  padding 24px !important
  border-radius 8px